<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties">
            <value>
                Host=localhost
                Port=23
                MaxBots=2
                CreationDelay=500
                BotsPerStep=1
                LogDelay=20000
                ClientGroupThreads=8
            </value>
        </property>
    </bean>

    <bean id="botsProducer" class="BotsProducerActor" factory-method="create">
        <constructor-arg ref="actorSystem"/>
        <constructor-arg value="${MaxBots}"/>
        <constructor-arg >
            <bean class="scala.concurrent.duration.FiniteDuration" factory-method="apply">
                <constructor-arg type="long" value="${CreationDelay}"/>
                <constructor-arg type="java.util.concurrent.TimeUnit" value="MILLISECONDS"/>
            </bean>
        </constructor-arg>
        <constructor-arg value="${BotsPerStep}"/>
        <constructor-arg >
            <bean class="scala.concurrent.duration.FiniteDuration" factory-method="apply">
                <constructor-arg value="${LogDelay}"/>
                <constructor-arg type="java.util.concurrent.TimeUnit" value="MILLISECONDS"/>
            </bean>
        </constructor-arg>
        <constructor-arg ref="nettyClient"/>
    </bean>

    <bean id="nettyClient" class="NettyClient" factory-method="factory">
        <constructor-arg value="${Host}"/>
        <constructor-arg value="${Port}"/>
        <constructor-arg>
            <bean class="io.netty.channel.nio.NioEventLoopGroup">
                <constructor-arg value="2"/>
                <constructor-arg ref="clientExecutor"/>
            </bean>
        </constructor-arg>
        <constructor-arg ref="pipelineInitializer"/>
    </bean>

    <bean id="clientExecutor" class="executors.ExecutorToRunner">
        <constructor-arg type="akka.actor.ActorRefFactory" ref="actorSystem"/>
        <constructor-arg type="int" value="${ClientGroupThreads}"/>
    </bean>

    <bean id="actorSystem" class="akka.actor.ActorSystem" factory-method="apply"/>

    <bean id="pipelineInitializer" class="ServerPipelineInitializer" factory-method="factory">
        <constructor-arg ref="serverHandlerFactory"/>
    </bean>

    <bean id="serverHandlerFactory" class="handlers.ServerHandler" factory-method="factory">
    </bean>

</beans>