<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties">
            <value>
                Port=8080
                ParentGroupThreads=1
                ChildGroupThreads=4
            </value>
        </property>
    </bean>

    <bean id="server" class="NettyServer">
        <constructor-arg name="host" type="java.net.InetAddress"><null/></constructor-arg>
        <constructor-arg name="port" type="int" value="${Port}"/>
        <constructor-arg name="parentGroup" type="io.netty.channel.EventLoopGroup" ref="parentGroup"/>
        <constructor-arg name="childGroup" type="io.netty.channel.EventLoopGroup" ref="childGroup"/>
        <constructor-arg name="childHandler" type="io.netty.channel.ChannelHandler" ref="pipelineInitializer"/>
    </bean>

    <bean id="parentGroup" class="io.netty.channel.nio.NioEventLoopGroup">
        <constructor-arg name="nThreads" type="int" value="${ParentGroupThreads}"/>
        <constructor-arg name="executor" type="java.util.concurrent.Executor">
            <bean class="executors.ExecutorToRunner">
                <constructor-arg name="actorRefFactory" type="akka.actor.ActorRefFactory" ref="system"/>
                <constructor-arg name="nThreads" type="int" value="${ParentGroupThreads}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="childGroup" class="io.netty.channel.nio.NioEventLoopGroup">
        <constructor-arg name="nThreads" type="int" value="${ChildGroupThreads}"/>
        <constructor-arg name="executor" type="java.util.concurrent.Executor">
            <bean class="executors.ExecutorToRunner">
                <constructor-arg name="actorRefFactory" type="akka.actor.ActorRefFactory" ref="system"/>
                <constructor-arg name="nThreads" type="int" value="${ChildGroupThreads}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="system" class="akka.actor.ActorSystem" factory-method="apply"/>

    <bean id="pipelineInitializer" class="GamePipelineInitializer"/>

</beans>